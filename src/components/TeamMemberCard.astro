---
import { Image } from "astro:assets";

interface Props {
  image: string;
  name: string;
  experience: string;
  role: string;
}

const { image, name, experience, role } = Astro.props;
console.log(image);
---

<div class="flex flex-col gap-3 text-center pb-3">
  <div class="px-4">
    <Image
      src={image}
      alt={name}
      class="w-full aspect-square rounded-full object-cover"
      width={418}
      height={418}
    />
  </div>
  <div>
    <p class="text-[#FFFFFF] text-base font-medium leading-normal">
      {name} - Pengalaman {experience} Tahun
    </p>
    <p class="text-[#9BACBB] text-sm font-normal leading-normal">
      {role}
    </p>
  </div>
</div>
