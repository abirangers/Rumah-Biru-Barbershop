---
const team = [
  {
    image: "https://cdn.usegalileo.ai/sdxl10/80bce23a-3cc1-40e7-bf03-4e8c1548507d.png",
    name: "Lucas",
    experience: "10 tahun",
    role: "Master Parber"
  },
  {
    image: "https://cdn.usegalileo.ai/sdxl10/2ed10119-d5c8-4f90-9915-140c5c7234b6.png", 
    name: "Jared",
    experience: "8 tahun",
    role: "Senior Parber"
  }
];
---

<div id="team">
  <h2
    class="text-[#FFFFFF] text-[22px] font-bold leading-tight tracking-[-0.015em] px-4 pb-3 pt-5"
  >
    Tim Kami
  </h2>
  <div class="grid grid-cols-[repeat(auto-fit,minmax(158px,1fr))] gap-3 p-4">
    {team.map((member) => (
      <div class="flex flex-col gap-3 text-center pb-3">
        <div class="px-4">
          <div
            class="w-full bg-center bg-no-repeat aspect-square bg-cover rounded-full"
            style={`background-image: url("${member.image}");`}
          />
        </div>
        <div>
          <p class="text-[#FFFFFF] text-base font-medium leading-normal">
            {member.name} - Pengalaman {member.experience}
          </p>
          <p class="text-[#9BACBB] text-sm font-normal leading-normal">
            {member.role}
          </p>
        </div>
      </div>
    ))}
  </div>
</div>
